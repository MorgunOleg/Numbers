#:kivy 2.2.0

# Основной игровой экран
<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20, 40
        spacing: 10

        GridLayout:
            cols: 2
            size_hint: 1, 0.2
            spacing: 30, 10

            Button:
                text: 'Начать\nновую игру'
                halign: 'center'
                valign: 'middle'
                on_press: root.new_round()

            Button:
                text: 'Правила'
                on_press: root.manager.current = 'rules'

            Button:
                id: next_rows_btn
                text: 'Продлить ряды'
                on_press: root.next_rows(self)
                disabled: True

            Button:
                id: clear_rows_btn
                text: 'Убрать пустые строки'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press: root.clean_rows(self)
                disabled: True

        Button:
            text: 'Выход'
            size_hint: 1, 0.1
            on_press: app.confirm_exit()

        # Информационное поле
        Label:
            id: label
            text_size: self.size
            font_size: 40
            halign: 'center'
            valign: 'middle'
            text:
                '''Добро пожаловать в игру "Цифирки"!
                Если знаешь, что делать - жми "Начать новую игру",
                или загляни в раздел "Правила"'''
            text_size: self.width - 40, None
            size_hint: 1, 0.15

        # Игровое поле с прокруткой
        ScrollView:
            size_hint: 1, 0.9
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: btn_grid
                cols: 9
                size_hint_y: None
                row_default_height: 80
                padding: 20
                spacing: 10
                row_force_default: True
                height: self.minimum_height


# Экран правил игры с прокруткой
<RulesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20, 80, 20, 20

        ScrollView:
            size_hint: 1, 0.9
            pos_hint: {"x": 0, "top": 1}
            do_scroll_x: False
            do_scroll_y: True

            Label:
                size_hint_y: None
                font_size: 40
                height: self.texture_size[1]
                text_size: self.width - 40, None
                padding: 20, 10
                spacing: 10
                row_force_default: True
                text:
                    '''Рад приветствовать, дорогой друг!\n
                    Игра "Цифирки" или "Семечки" пришла из моего детства, когда я "залипал" в нее на некоторых скучных уроках, изрисовывая числами последние листы тетради :)\n

                    Правила проще, чем может показаться.\n
                    Первые стартовые 3 строки всегда одинаковые и состоят из последовательно записанных чисел от 1 до 19 (кроме 10). Ширина ряда - 9 знаков.\n

                    Далее цифры надо "вычеркивать" попарно.
                    Можно зачеркивать цифры, которые:
                    - равны между собой или
                    - в сумме образуют 10.\n

                    Цифры можно вычёркивать, если они стоят рядом по горизонтали или вертикали, а также последнюю (незачёркнутую) цифру в строке и первую (незачёркнутую) в следующей, если они подходят по условиям.\n

                    Вычеркнутые цифры при этом не учитываются. То есть, если в горизонтали между одинаковыми цифрами все зачеркнуто, то эти цифры также можно закрыть.
                    Пустые ряды также не учитываются и могут быть исключены с поля кнопкой "Убрать пустые сроки" (в тетради так не работало)\n

                    Когда видимые пары кончились (или в любой иной момент, по желанию) можно добавить еще цифр кнопкой "Добавить ряды". В этом случае строки достраиваются за счет повторения оставшихся цифр (кроме вычеркнутых).\n

                    Цель игры - вычеркнуть все цифры с поля.'''

        Button:
            text: 'Вернуться к игре'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "y": 0}
            on_press: root.manager.current = 'game'
            size_hint: 1, 0.1


# Всплывающее окно предупреждения о выходе (закрытии программы)
<ExitPopup@Popup>:
    title: 'Подтверждение выхода'
    size_hint: 0.8, 0.4
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: 'Вы действительно хотите выйти из игры?'
            font_size: 60
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 10

            Button:
                text: 'Да'
                on_release: app.stop()

            Button:
                text: 'Отмена'
                on_release: root.dismiss()

